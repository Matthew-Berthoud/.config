{
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.2",
  "schemes" : [
    {
      "if" : {
        "device" : {
          "category" : "trackpad",
          "productID" : "0x0",
          "productName" : "Apple Internal Keyboard \/ Trackpad",
          "vendorID" : "0x0"
        }
      },
      "pointer" : {
        "acceleration" : "unset",
        "disableAcceleration" : false,
        "redirectsToScroll" : false,
        "speed" : "unset"
      },
      "scrolling" : {
        "acceleration" : 1,
        "distance" : {
          "horizontal" : 3,
          "vertical" : "auto"
        },
        "reverse" : {
          "horizontal" : false
        },
        "speed" : 0
      }
    },
    {
      "if" : {
        "device" : {
          "category" : "mouse",
          "productID" : "0xb034",
          "productName" : "MX Master 3S",
          "serialNumber" : "D98EE568",
          "vendorID" : "0x46d"
        }
      },
      "scrolling" : {
        "modifiers" : {
          "horizontal" : {
            "shift" : {
              "scale" : 1,
              "type" : "changeSpeed"
            }
          }
        }
      }
    }
  ]
}